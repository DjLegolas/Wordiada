                      <AnchorPane>
                           <children>
                              <Label fx:id="initInfoGame" layoutY="33.0" />
                              <Label fx:id="titleInfoGame" layoutX="12.0" prefHeight="21.0" textAlignment="CENTER" underline="true" />
                           </children>
                        </AnchorPane>
                     </content>
